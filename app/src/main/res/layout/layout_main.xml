<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:stl_clickable="true"
        app:stl_defaultTabBackground="@android:color/transparent"
        app:stl_defaultTabTextColor="@android:color/black"
        app:stl_distributeEvenly="false"
        app:stl_dividerColor="@android:color/white"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="@color/accent"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="4dp"
        app:stl_titleOffset="40dp"
        app:stl_underlineColor="@android:color/transparent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewpagertab" />

</LinearLayout>
